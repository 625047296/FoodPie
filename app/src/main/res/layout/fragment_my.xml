<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="4"
       android:orientation="vertical"
       android:background="@mipmap/img_my_bg"
       >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="horizontal"
    >
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"

        android:layout_height="20dp"
        android:textSize="20dp"
        android:text="我的"
        />
       <Button
           android:layout_alignParentRight="true"
           android:layout_width="40dp"
           android:id="@+id/btn_my"
           android:layout_height="40dp"
           android:background="@mipmap/ic_my_setting"
           />
</RelativeLayout>
       <com.example.dllo.foodpie.myfragment.CircleImageView
           android:layout_width="wrap_content"
           android:layout_height="0dp"
           app:isCircle="true"
           android:layout_weight="2"
            android:src="@mipmap/img_default_avatar"
           android:layout_gravity="center_horizontal"

           />

        <Button
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@null"
            android:text="点击登录"


            />


   </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:orientation="horizontal"
          android:id="@+id/photo_my"
          >
          <ImageView
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="match_parent"
              android:src="@mipmap/ic_my_photo"
              />
          <TextView
              android:layout_marginLeft="15dp"
              android:layout_width="0dp"
              android:layout_weight="8"
              android:layout_height="match_parent"
              android:text="我的照片"
              android:textSize="20dp"
              android:gravity="center_vertical"
              />
          <ImageView
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:src="@mipmap/ic_arrow_right_default"
              />

      </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/collect_my"
            >
            <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_my_collect"
            />
            <TextView
                android:layout_marginLeft="15dp"

                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="match_parent"
                android:text="我的收藏"
                android:textSize="20dp"
                android:gravity="center_vertical"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/ic_arrow_right_default"
                /></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/upload_my"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_my_upload"
                />
            <TextView
                android:layout_marginLeft="15dp"

                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="match_parent"
                android:text="上传食物数量"
                android:textSize="20dp"
                android:gravity="center_vertical"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/ic_arrow_right_default"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/order_my"
            > <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_my_order"
            />
            <TextView
                android:layout_marginLeft="15dp"

                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="match_parent"
                android:text="我的订单"
                android:textSize="20dp"
                android:gravity="center_vertical"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/ic_arrow_right_default"
                /></LinearLayout>





 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="0dp"
     android:layout_weight="1"
     ></LinearLayout>

</LinearLayout>