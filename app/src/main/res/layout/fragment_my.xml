<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@mipmap/img_my_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"

                android:layout_centerInParent="true"
                android:text="我的"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_my"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:background="@mipmap/ic_my_setting" />
        </RelativeLayout>

        <com.example.dllo.foodpie.tools.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:src="@mipmap/img_default_avatar"
            app:isCircle="true"

            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:background="@null"
            android:text="点击登录"


            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/photo_my"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/ic_my_photo" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="我的照片"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@mipmap/ic_arrow_right_default" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/collect_my"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/ic_my_collect" />

        <TextView
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="我的收藏"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@mipmap/ic_arrow_right_default" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/upload_my"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/ic_my_upload" />

        <TextView
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="上传食物数量"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@mipmap/ic_arrow_right_default" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/order_my"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/ic_my_order" />

        <TextView
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="我的订单"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@mipmap/ic_arrow_right_default" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></LinearLayout>

</LinearLayout>