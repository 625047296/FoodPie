<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:id="@+id/ll_first"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:background="#fff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_first"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="-60dp"
        android:background="#fff"
        android:orientation="vertical">

        <TextView

            android:id="@+id/tv_firstTitle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#fff"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#616361" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_firstpublisher_avatar"
                android:layout_width="20dp"


                android:layout_height="20dp"

                />


            <TextView
                android:id="@+id/tv_firstpublisher"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:background="#fff"
                android:gravity="center" />

            <ImageView
                android:layout_marginLeft="8dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_home_agree" />

            <TextView
                android:id="@+id/tv_firstlike_ct"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:textColor="#797171" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>